<cu-custom bgColor="bg-white" isCustom="{{true}}">
  <view slot="content">{{pageCode.index001}}</view><!-- 新增地址 -->
</cu-custom>

<view class="cu-form-group">
  <view class="title">{{pageCode.index002}}</view>
  <input value="{{name}}" bindinput="namechange" placeholder="{{pageCode.index002}}"></input>
</view>
<view class="cu-form-group">
  <view class="title">{{pageCode.index003}}</view>
  <picker mode="region" bindchange="RegionChange" value="{{region}}">
    <view class="picker">
      {{pageCode.index004}}，{{pageCode.index005}}，{{pageCode.index006}}
    </view>
  </picker>
</view>
<view class="cu-form-group">
  <view class="title">{{pageCode.index007}}</view>
  <input value="{{locate}}" bindinput="locatachange"  placeholder="{{pageCode.index007}}"></input>
  <text class="cuIcon-locationfill text-orange"></text>
</view>
<view class="cu-form-group">
  <view class="title">{{pageCode.index008}}</view>
  <input type="number" value="{{number}}" bindinput="numberchange"  placeholder="{{pageCode.index008}}"></input>
  <view class="cu-capsule radius">
    <view class="cu-tag bg-blue">
      +86
    </view>
    <view class="cu-tag line-blue">
      {{pageCode.index009}}
    </view>
  </view>
</view>

<view class="padding flex flex-direction">
  <button bindtap="Confirm" class="cu-btn bg-gradual-orange lg">{{pageCode.index010}}</button>
</view>